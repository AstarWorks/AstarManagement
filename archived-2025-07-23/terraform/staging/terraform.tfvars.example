# Project Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Network Configuration
vpc_cidr     = "10.0.0.0/16"
subnet_cidr  = "10.0.1.0/24"
pod_cidr     = "10.1.0.0/16"
service_cidr = "10.2.0.0/16"

# GKE Configuration
cluster_name        = "aster-staging-cluster"
node_count          = 3
node_machine_type   = "e2-standard-2"
node_disk_size      = 50
node_disk_type      = "pd-standard"
min_node_count      = 1
max_node_count      = 10

# Database Configuration
db_tier               = "db-f1-micro"
db_version            = "POSTGRES_15"
db_storage_size       = 20
db_storage_type       = "PD_SSD"
db_backup_enabled     = true
db_backup_start_time  = "03:00"

# Redis Configuration
redis_memory_size = 1
redis_tier        = "BASIC"

# Security Configuration
authorized_networks = [
  {
    name  = "office-network"
    value = "203.0.113.0/24"
  }
]
enable_private_nodes   = true
enable_network_policy  = true

# SSL Configuration
domain_name = "staging.aster-management.example.com"
enable_ssl  = true

# Monitoring Configuration
enable_monitoring = true
enable_logging    = true

# Backup Configuration
backup_retention_days = 7

# Application Configuration
backend_image  = "us-docker.pkg.dev/your-project-id/aster-management/api:latest"
frontend_image = "us-docker.pkg.dev/your-project-id/aster-management/web:latest"

backend_replicas  = 2
frontend_replicas = 2

# Resource Limits
backend_cpu_request    = "500m"
backend_memory_request = "512Mi"
backend_cpu_limit      = "1000m"
backend_memory_limit   = "1Gi"

frontend_cpu_request    = "100m"
frontend_memory_request = "128Mi"
frontend_cpu_limit      = "500m"
frontend_memory_limit   = "512Mi"
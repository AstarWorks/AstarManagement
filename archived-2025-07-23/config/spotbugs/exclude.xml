<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter
    xmlns="https://github.com/spotbugs/filter/3.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">

    <!-- Exclude auto-generated files -->
    <Match>
        <Class name="~.*\$.*"/>
    </Match>

    <!-- Exclude test classes -->
    <Match>
        <Class name="~.*Test.*"/>
    </Match>

    <!-- Exclude configuration classes -->
    <Match>
        <Class name="~.*Config.*"/>
        <Bug pattern="UWF_FIELD_NOT_INITIALIZED_IN_CONSTRUCTOR"/>
    </Match>

    <!-- Exclude DTO classes -->
    <Match>
        <Class name="~.*Dto"/>
        <Bug pattern="URF_UNREAD_FIELD,UWF_UNWRITTEN_FIELD"/>
    </Match>

    <!-- Exclude entity classes -->
    <Match>
        <Class name="~.*Entity"/>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
    </Match>

    <!-- Exclude Kotlin data classes common issues -->
    <Match>
        <Bug pattern="EQ_DOESNT_OVERRIDE_EQUALS"/>
    </Match>

    <!-- Spring-specific exclusions -->
    <Match>
        <Class name="~.*Application"/>
        <Method name="main"/>
        <Bug pattern="DM_EXIT"/>
    </Match>

    <!-- Exclude serialization issues for Spring Boot -->
    <Match>
        <Bug pattern="SE_BAD_FIELD,SE_NO_SERIALVERSIONID"/>
    </Match>

    <!-- Exclude null pointer warnings for lateinit -->
    <Match>
        <Bug pattern="NP_NULL_ON_SOME_PATH"/>
    </Match>

    <!-- JPA/Hibernate related exclusions -->
    <Match>
        <Class name="~.*Repository"/>
        <Bug pattern="UUF_UNUSED_FIELD"/>
    </Match>

    <!-- Jackson serialization -->
    <Match>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
        <Class name="~.*Response"/>
    </Match>
    <Match>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
        <Class name="~.*Request"/>
    </Match>
</FindBugsFilter>
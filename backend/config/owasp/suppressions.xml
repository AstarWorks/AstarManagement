<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    
    <!-- Spring Boot DevTools - Development only -->
    <suppress>
        <notes>Spring Boot DevTools is only used in development and not included in production builds</notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.boot/spring-boot-devtools@.*$</packageUrl>
        <cve>CVE-2018-1304</cve>
    </suppress>
    
    <!-- H2 Database - Test only -->
    <suppress>
        <notes>H2 Database is only used for testing and not in production</notes>
        <packageUrl regex="true">^pkg:maven/com\.h2database/h2@.*$</packageUrl>
        <vulnerabilityName>CVE-2018-10054</vulnerabilityName>
    </suppress>
    
    <!-- Test Dependencies -->
    <suppress>
        <notes>Test dependencies are not included in production builds</notes>
        <packageUrl regex="true">^pkg:maven/org\.junit\..*@.*$</packageUrl>
    </suppress>
    
    <suppress>
        <notes>Test dependencies are not included in production builds</notes>
        <packageUrl regex="true">^pkg:maven/org\.mockito\..*@.*$</packageUrl>
    </suppress>
    
    <suppress>
        <notes>Test dependencies are not included in production builds</notes>
        <packageUrl regex="true">^pkg:maven/org\.testcontainers\..*@.*$</packageUrl>
    </suppress>
    
    <!-- Known false positives for Spring ecosystem -->
    <suppress>
        <notes>False positive - Spring Framework vulnerability not applicable to current usage</notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework/.*@.*$</packageUrl>
        <cve>CVE-2016-1000027</cve>
    </suppress>
    
    <!-- Suppress low severity vulnerabilities in development tools -->
    <suppress base="true">
        <notes>Development tools vulnerabilities below CVSS 7.0 are suppressed</notes>
        <cvssBelow>7.0</cvssBelow>
    </suppress>
    
    <!-- PostgreSQL Driver - Known issues that don't affect our usage -->
    <suppress>
        <notes>PostgreSQL driver vulnerability not applicable to our connection usage</notes>
        <packageUrl regex="true">^pkg:maven/org\.postgresql/postgresql@.*$</packageUrl>
        <cve>CVE-2024-1597</cve>
    </suppress>
    
    <!-- Jackson vulnerabilities that don't affect our specific usage -->
    <suppress>
        <notes>Jackson vulnerability mitigated by input validation in our application layer</notes>
        <packageUrl regex="true">^pkg:maven/com\.fAstarxml\.jackson\..*@.*$</packageUrl>
        <cve>CVE-2020-36518</cve>
    </suppress>
    
</suppressions>